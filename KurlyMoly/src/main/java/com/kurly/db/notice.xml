<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="Notice">
  <insert id="noticeadd" parameterType="map">
  	insert into tb_notice (n_title, n_content, n_isimpt, n_isdisplay) values
  	(#{n_title}, #{n_content}, #{n_isimpt}, #{n_isdisplay})
  </insert>
  <select id="totalCount" resultType="int">
		select count(n_idx) as total from tb_notice
  </select>
  <select id="selectList" parameterType="map" resultMap="notice">
		select * from tb_notice order by n_regdate desc limit #{start}, #{pagePerCount}
  </select>
  <resultMap type="com.kurly.notice.NoticeDTO" id="notice"> 
 		<result column="n_idx" property="idx"/>  
		<result column="n_title" property="title"/> 
		<result column="n_hit" property="hit"/> 
		<result column="n_isdisplay" property="isdisplay"/> 
		<result column="n_isimpt" property="isimpt"/> 
		<result column="n_regdate" property="regdate"/> 
  </resultMap>
  <select id="selectView" parameterType="map" resultMap="notice">
  		select * from tb_notice where n_idx=#{n_idx}
  </select>
</mapper>